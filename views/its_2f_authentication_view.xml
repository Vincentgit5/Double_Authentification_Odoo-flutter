<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="its_2f_authentication_list">
      <field name="name">its_2f_authentication list</field>
      <field name="model">its.its_2f_authentication</field>
      <field name="arch" type="xml">
        <tree>
          <field name="reference_no"/>
          <field name="user_id"/>
          <field name="public_key"/>
          <field name="date"/>
          <field name="company_id"/>
        </tree>
      </field>
    </record>

    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="its_2f_authentication_form">
      <field name="name">identity Form</field>
      <field name="model">its.its_2f_authentication</field>
      <field name="arch" type="xml">
        <form>
          <header>
            <button name="generate_key" type="object" class="oe_highlight" string="Generate" attrs="{'invisible': [('public_key', '!=', False) and ('private_key', '!=', False)]}" />
            <field name="state" widget="statusbar" nolabel="1"></field>
          </header>
          <sheet>
              <div class="oe_title">
                  <h1>
                      <field name="reference_no"/>
                  </h1>
              </div>
              <group>
                  <group>
                    <field name="public_key" readonly="True"/>
                    <field name="private_key" readonly="True"/>
                    <field name="user_id" options="{'no_create': True, 'no_create_edit':True}" required="1" attrs="{'readonly': [('public_key', '!=', False) and ('private_key', '!=', False)]}"/>
                  </group>
                  <group>
                    <field name="date" readonly="1"/>
                     <field name="company_id" readonly="1"/>
                    <field name="users_id" string="User created" readonly="1"/>
                  </group>
              </group>
              <notebook>
                 <page string="Validation information">
                     <group>
                        <group>
                             <field name="user_validation" string="User validation" options="{'no_create': True, 'no_create_edit':True}" readonly="1" />
                         </group>
                         <group>
                             <field name="validation_date" readonly="True" />
                         </group>
                     </group>
                 </page>
                 <page string="notes">
                    <field name="description" />
                 </page>
              </notebook>
          </sheet>
        </form>
      </field>
    </record>
  </data>
</odoo>